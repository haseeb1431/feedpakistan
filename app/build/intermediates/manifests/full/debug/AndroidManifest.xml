<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glowingsoft.alert"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.glowingsoft.alert.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.glowingsoft.alert.MenuActivity" />
        <activity android:name="com.glowingsoft.alert.DonnerActivity" />
        <activity android:name="com.glowingsoft.alert.TakerActivity" />
        <activity android:name="com.glowingsoft.alert.RegistrationActivity" />
        <activity android:name="com.glowingsoft.alert.ProfileActivity" />
        <activity android:name="com.glowingsoft.alert.AddDonation" />
    </application>

</manifest>