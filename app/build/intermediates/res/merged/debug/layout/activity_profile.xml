<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.glowingsoft.alert.ProfileActivity">
    <TextView
        android:id="@+id/titleTitle"
        android:textSize="@dimen/titlesize"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/addressTV"
        android:text="Address:"
        android:textSize="@dimen/titlesize"
        android:layout_below="@id/titleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/addressTV"
        android:layout_centerHorizontal="true"
        android:id="@+id/adddonation"
        android:text="Add Donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:layout_below="@+id/adddonation"
        android:id="@+id/donationHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>
